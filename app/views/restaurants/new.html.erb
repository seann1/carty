  <%= semantic_form_for @restaurant do |f| %>
    <%= f.input :name, label: "Cart Name", required: true %>
    <%= f.input :address %>
    <%= f.input :website %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :button_html => { :class => "btn btn-default" } %>
      <%= f.action :cancel, :as => :link %>
    <% end %>
  <% end %>